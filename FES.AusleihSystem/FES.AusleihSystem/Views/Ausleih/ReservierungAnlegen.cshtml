        $('#Kategorie').change(function () {
            $("#Products tbody tr").remove();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("GerateTabelleReloadJson")',
                dataType: 'json',
                data: { id: $('#Kategorie').val() },
                success: function (data) {
                  //  alert(data.val().ID),
