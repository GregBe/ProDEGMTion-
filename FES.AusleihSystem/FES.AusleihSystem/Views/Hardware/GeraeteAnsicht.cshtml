@model List<FES.AusleihSystem.ViewModels.GeraetViewModel>
@using FES.AusleihSystem.ViewModels

<h2>Ger&auml;teansicht</h2>

<div class="form-control" style="height: 500px; overflow-y: scroll;">
    <table border="0">
        <thead>
            <tr>
                <th>Artikel Nummer</th>
                <th>Ger&auml;te-Name</th>
                <th>Reservierungsstatus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ger in Model)
            {
                <tr>
                    <th>@ger.ID</th>
                    <th>@ger.Name</th>
                    @if (ger.GeraeteStatus != GeraetViewModel.Status.isVerfugbar)
                    {
                        
                        <th><a>@ger.GeraeteStatus</a></th>

                    }
                    else
                    {

                       
                    }
                    
                </tr>
            }
        </tbody>
       </table>
</div>

