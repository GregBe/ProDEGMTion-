@using Microsoft.AspNetCore.Identity
@using FES.AusleihSystem.Controllers;
@using FES.AusleihSystem;


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
        <ul class="nav navbar-nav">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="SeedingData" asp-action="Seeding">Datenbank füllen</a></li>
            @if (User.IsInRole("Admin"))
            {
                <li><a asp-area="" asp-controller="Hardware" asp-action="AddGeraet">Gerät hinzufügen</a></li>
            }
            else
            {
                <li><a asp-area="" asp-controller="Profil" asp-action="Profil">Profil</a></li>
            }

            <li><a asp-area="" asp-controller="Hardware" asp-action="GeraeteAnsicht">Geräteanzeige</a></li>
            
            <li><a asp-area="" asp-controller="Ausleih" asp-action="Ubersicht">AusleihUbersicht</a></li>
            <li><a asp-area="" asp-controller="Ausleih" asp-action="ReservierungAnlegen">Reservierungen</a></li>


        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="Manage" asp-action="Index">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="SeedingData" asp-action="Seeding">Datenbank füllen</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrieren</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}
